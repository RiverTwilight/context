{
  "manifest_version": 3,
  "name": "Context",
  "version": "1.0.0",
  "description": "Shows related Hacker News comments for the current tab",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Context - HN Comments"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}