{
  "manifest_version": 3,
  "name": "Context",
  "version": "1.0.1",
  "description": "Find related comments & stories from HN for the current tab",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Context - HN Comments"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}